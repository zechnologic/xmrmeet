# Server Configuration
PORT=3000

# JWT Secret - CHANGE THIS TO A RANDOM STRING IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Geocoding Configuration (Optional)
# Geoapify API Key for improved geocoding reliability (3000 requests/day free tier)
# Get a free API key at: https://www.geoapify.com/
# If not provided, falls back to OpenStreetMap Nominatim (slower, less reliable)
# GEOAPIFY_API_KEY=your_api_key_here

# Admin Configuration
ADMIN_USERNAME=admin

# Geocoding Configuration
GEOAPIFY_API_KEY=123abc